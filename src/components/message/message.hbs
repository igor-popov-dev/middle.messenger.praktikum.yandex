{{#if image}}
    <div class="message message__{{type}} message_img">
        <img src={{image}} alt="Прикрепленная картинка" class="message__element">
        <div class="message__time message__time_{{type}} message__time_img">
            {{#if readed}}
                <svg xmlns="http://www.w3.org/2000/svg" width="10" height="5" viewBox="0 0 10 5" fill="none">
                    <line y1="-0.5" x2="3.765" y2="-0.5" transform="matrix(0.705933 0.708278 -0.705933 0.708278 0.700195 2.33313)" stroke="#FFFFFF"/>
                    <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 3.35828 5.00006)" stroke="#FFFFFF"/>
                    <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 6.01587 5.00006)" stroke="#FFFFFF"/>
                </svg>
            {{/if}}
            {{time}}
        </div>
    </div> 
{{else}}
    <div class="message message__{{type}}">
        <p class="message__text">{{text}}</p>
        {{#if readed}}
            <svg class="message__check-marks" xmlns="http://www.w3.org/2000/svg" width="10" height="5" viewBox="0 0 10 5" fill="none">
                <line y1="-0.5" x2="3.765" y2="-0.5" transform="matrix(0.705933 0.708278 -0.705933 0.708278 0.700195 2.33313)" stroke="#3369F3"/>
                <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 3.35828 5.00006)" stroke="#3369F3"/>
                <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 6.01587 5.00006)" stroke="#3369F3"/>
            </svg>
        {{/if}}
        <div class="message__time message__time_{{type}}">
            {{time}}
        </div>
    </div>
{{/if}}
